<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:background="@mipmap/server_set_bg">

    <ImageView
        android:id="@+id/iv_serverset_right_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@mipmap/server_set_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minHeight="300dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="服务器设置"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="首次使用需先设置服务器地址"

            android:textColor="#B2D9FF"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_serverset_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@mipmap/server_set_et_bg"
            android:gravity="center"
            android:hint="IP地址"
            android:minHeight="50dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CAE5FF"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_serverset_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/server_set_et_bg"
            android:gravity="center"
            android:hint="端口"
            android:minHeight="50dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CAE5FF" />

        <EditText
            android:id="@+id/et_serverset_virtualdir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/server_set_et_bg"
            android:gravity="center"
            android:hint="虚拟目录(可空)"
            android:minHeight="50dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CAE5FF" />

        <Button
            android:id="@+id/btn_serverset_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/server_set_btn_bg"
            android:minHeight="50dp"
            android:text="确 定"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>